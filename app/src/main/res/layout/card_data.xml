<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_data"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nama Barang"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/cv_container"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="@+id/cv_container"
            app:layout_constraintTop_toTopOf="@id/cv_container" />

        <TextView
            android:id="@+id/tv_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tanggal :"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

        <TextView
            android:id="@+id/tv_title_jumlah_barang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Jumlah :"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_tanggal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_tanggal"
            app:layout_constraintTop_toBottomOf="@id/tv_tanggal" />

        <TextView
            android:id="@+id/tv_title_harga_barang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Harga :"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_title_jumlah_barang"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_title_jumlah_barang"
            app:layout_constraintTop_toBottomOf="@id/tv_title_jumlah_barang" />

        <TextView
            android:id="@+id/tv_total_pembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Total :"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_title_harga_barang"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_title_harga_barang"
            app:layout_constraintTop_toBottomOf="@id/tv_title_harga_barang" />

        <TextView
            android:id="@+id/tv_title_penerimaan_pembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Penerimaan :"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_total_pembayaran"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_total_pembayaran"
            app:layout_constraintTop_toBottomOf="@id/tv_total_pembayaran" />

        <TextView
            android:id="@+id/tv_title_sisa_penerimaan_pembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Sisa :"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_title_penerimaan_pembayaran"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_title_penerimaan_pembayaran"
            app:layout_constraintTop_toBottomOf="@id/tv_title_penerimaan_pembayaran" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>